<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/museum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/museum" />

    <Button
        android:id="@+id/cinema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/cinemas" />

    <Button
        android:id="@+id/theater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/theaters" />

    <Button
        android:id="@+id/club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/clubs" />
    <Button
        android:id="@+id/showroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/showrooms" />
    <Button
        android:id="@+id/pharmacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/pharmacies" />
    <Button
        android:id="@+id/hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white_text"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="5dp"
        android:text="@string/hospital" />
</LinearLayout>